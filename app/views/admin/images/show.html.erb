<section class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <h1 class="h3">
        <%= @image.data_file_name %>
        <small><%= file_size(@image) %></small>
      </h1>
      <p class="file-size">
        <%= @image.data_updated_at %>
      </p>
    </div>
    <div class="col-sm-10 text-right-md">
      <%= link_to "Remove Image",
                  [:admin, @image],
                  class: "btn-admin btn btn-danger",
                  method: :delete,
                  data: {
                    confirm: "Are you sure you would like to remove this image?"
                  } %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= image_tag @image.data.url %>
    </div>
  </div>
</section>