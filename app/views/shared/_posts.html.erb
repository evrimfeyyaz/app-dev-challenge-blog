<% if posts.any? %>
  <section class="container posts">
    <% if defined? title %>
      <div class="row">
        <div class="col-xs-12">
          <h1 class="posts-title"><%= title %></h1>
        </div>
      </div>
    <% end %>
    <div class="grid">
      <% posts.each do |post| %>
        <article class="grid-item col-xs-12 col-sm-6 col-md-4">
          <div class="grid-item-content thumbnail">
            <% if post.image %>
              <%= link_to post do %>
                <%= image_tag post.image.data.url(:thumb_2x), alt: post.title %>
              <% end %>
            <% end %>
            <div class="caption">
              <p class="meta">
                <%= link_to_post_category(post) %>
                <span class="circle-symbol">‚óè</span>
                <%= format_time(post.published_at) %>
              </p>
              <h1 class="h2"><%= link_to post.title, post, class: 'post-title' %></h1>
              <p class="excerpt">
                <%= excerpt_from_markdown(post.content) %>
              </p>
            </div>
          </div>
        </article>
      <% end %>
    </div>
  </section>
<% end %>